@using EventiaWebapp.Services

@inject EventsHandler _eventHandler

<h1>Upcoming events!</h1>


<div class="accordion accordion-flush" id="accordionFlushExample">
    @for (int i = 0; i < _eventHandler.EventsList.Count; i++)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-heading-@i">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-@i" aria-expanded="false" aria-controls="flush-collapse-@i">
                    @_eventHandler.EventsList[i].Title | @_eventHandler.EventsList[i].Date.ToString("M") | @_eventHandler.EventsList[i].Place 
                </button>
            </h2>
            <div id="flush-collapse-@i" class="accordion-collapse collapse" aria-labelledby="flush-headin-@i" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    <h3> Seats: @_eventHandler.EventsList[i].SpotsAvalable Organiser: @_eventHandler.EventsList[i].Organizer.Name </h3>

                    @_eventHandler.EventsList[i].Info
                </div>
                <button>Join event</button>
            </div>
     
        </div>

    }
</div>

