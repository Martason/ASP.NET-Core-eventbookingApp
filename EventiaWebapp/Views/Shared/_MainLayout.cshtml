@inject IWebHostEnvironment _environment

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
        crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=League+Gothic&family=Montserrat&family=Roboto:wght@300&display=swap" rel="stylesheet">
    <style>
        * {
            font-family: 'League Gothic', sans-serif;
            font-size: 25px;
        }
        html, body {
            height: 100vh;
            min-height: 100vh;
        }
        .main-grid-layout {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            grid-template-rows: auto 1fr auto;
            
            height: 100%;
            min-height: 100%;
        }
        header {
            background-color: white;
            grid-column: 1/3;
            grid-row: 1/2;

            padding: 20px;
        }
        h1 {
            color: #642188;
            text-shadow: 4px 4px #e2fafc;
            text-align: center;
        }
       
        main {
            background-color: white;
            grid-column: 2/3;
            grid-row: 2/3;

            padding: 20px;
        }
        footer {
            background-color: white;
            grid-column: 1/3;
            grid-row: 3/4;

            padding: 20px;
        }

        .homeMain {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            text-align: center;
            height: 500px;
            font-size: 15px;
        }
        .joinEventMainDiv {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            text-align: center;
        }
      
        .knapp {
            color: #642188;
            background-color: #e2fafc;
            border-color: #212529;
        }
        .infoText {
            font-family: 'Montserrat', sans-serif;
        }
    </style>
    @await RenderSectionAsync("bottom_of_head", false)

</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" asp-page="/Index" >Home</></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Events" asp-action="Index">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/MyEvents">My Events</a>
                    </li>
                    @if (_environment.IsDevelopment())
                    {
                        <li class="nav-item">
                            <a class="btn btn-warning" asp-page="/Development">Developer tools</a>
                        </li>

                    }
                    
                </ul>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Index">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

</header>
<main>
    <div class="container-md">
        @RenderBody()
    </div>
 
</main>
<footer>
    <div class="container">
        &copy; AnnaMärta 2022
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
@await RenderSectionAsync("bottom_of_body", false)
</body>

