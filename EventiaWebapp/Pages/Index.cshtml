@page
@model EventiaWebapp.Pages.IndexModel


<div class="homeMain">
    <h1>Epic Events</h1>
    <p>
        The events in our lives happen in a sequence in time, but in their significance to ourselves 
        they find their own order the continuous thread of revelation.
    </p>
    @if (!User.Identity.IsAuthenticated)
    {
        <div>
            <a class="btn btn-dark knapp" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="btn btn-dark knapp" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    }
    


</div>
