@page
@model EventiaWebapp.Pages.User.RegisterModel
@{
}
<div class="container border" style="padding: 20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="user.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="user.Username" class="form-control">
            </div>
            <span class="text-danger" asp-validation-for="user.Username"></span>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="user.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="user.Password" class="form-control">
            </div>
            <span class="text-danger" asp-validation-for="user.Password"></span>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="user.Email"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="user.Email" class="form-control">
            </div>
            <span class="text-danger" asp-validation-for="user.Email"></span>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-dark knapp" value="Register"/>
            </div>
        </div>
    </form>
</div>
