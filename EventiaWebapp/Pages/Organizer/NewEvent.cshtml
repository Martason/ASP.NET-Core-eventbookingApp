@page
@model EventiaWebapp.Pages.Organizer.NewEventModel
@{
}

<div class="container">
    <h3>Add new event</h3>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.Title" class="form-control" autocomplete="off"/>
            <label asp-for="Input.Title"></label>
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Date" class="form-control" autocomplete="off"/>
            <label asp-for="Input.Date"></label>
            <span asp-validation-for="Input.Date" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Place" class="form-control" autocomplete="off"/>
            <label asp-for="Input.Place"></label>
            <span asp-validation-for="Input.Place" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Adress" class="form-control" autocomplete="off"/>
            <label asp-for="Input.Adress"></label>
            <span asp-validation-for="Input.Adress" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.SpotsAvailable" class="form-control" autocomplete="off"/>
            <label asp-for="Input.SpotsAvailable"></label>
            <span asp-validation-for="Input.SpotsAvailable" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.InfoShort" class="form-control" autocomplete="off"/>
            <label asp-for="Input.InfoShort"></label>
            <span asp-validation-for="Input.InfoShort" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.InfoLong" class="form-control" autocomplete="off"/>
            <label asp-for="Input.InfoLong"></label>
            <span asp-validation-for="Input.InfoLong" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="w-100 btn btn-dark knapp">Add event!</button>
    </form>

</div>
